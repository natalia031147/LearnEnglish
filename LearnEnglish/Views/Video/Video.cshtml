
@{
    ViewBag.Title = "Video";
}

<div div="page-content" style="width: 880px;" ng-controller="VideoController" ng-init="getVideo();">
    <div class="video_title" >
        <h3 style="color : #fff;">
            {{video.Title}}
        </h3>
    </div>
    <div class="video_general" ng-show="show_general">
        <div class="row" style="padding-bottom: 28px;">
            <div class="col-lg-5">
                <ul class="video_general_links">
                    <li class="video_general_links_item">
                        <a class="video_general_links_item_a" href="" ng-click="listening()">                            
                            <span class="video_general_links_name">Listening</span>
                        </a>
                    </li>
                    <li class="video_general_links_item">
                        <a class="video_general_links_item_a" href="">
                            <span class="video_general_links_name">Writing</span>
                        </a>
                    </li>
                    <li class="video_general_links_item">
                        <a class="video_general_links_item_a" href="">
                            <span class="video_general_links_name">Speaking</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="youtubePlayer col-lg-6">                
                <youtube-video player-width="'460'" player-height="'300px'"  video-url="video.Url" player="youtubePlayer1"></youtube-video>
            </div>
        </div>
    </div>
    <div class="video_general" ng-show="show_listening" >
        <div class="row" style="padding-bottom: 28px;">
            <div class="youtubePlayer col-lg-7" ng-click="playVideo()">
                <youtube-video player-width="'460'" player-height="'300px'" video-url="video.Url" ng-click="playVideo();" player-vars="playerVars"  player="youtubePlayer2" ></youtube-video>
            </div>
            <div class="book col-lg-5">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="{{progress}}"
                         aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}%">
                        <span class="sr-only">{{progress}}% Complete</span>
                    </div>
                </div>
                <h2 class="passed-count">{{currentPhrase.OrderNumber}}/{{video.phrases.length}}</h2>
            </div>
        </div>

        <div class="type">
            <div class="words">
                <div ng-repeat="item in typedWords track by $index" bind-once>{{item}}</div>
                <input ng-model="typingWord"                      
                       ng-style='{color: generateColor()}' 
                       ng-disabled ="currentPhrase.Phrase == ''"   
                       ng-trim="false"                  
                       type="text"
                       placeholder="..."
                       size="30"
                       style="width: 150px;"
                       class="input-type"
                       ng-keyup="typing($event.keyCode)" />
            </div>
            <button class="btn btn-primary hint-button" ng-click="hint()">Hint</button>
        </div>        
    </div>
    <div class="history">
        <ul class="phrases">
            <li ng-repeat="item in history|orderBy : OrderNumber : true track by $index ">
                <em class="number">{{item.OrderNumber}}</em>
                <div>
                    <p class="phrase-eng">{{item.Phrase}}</p>
                    <p class="phrase-translated">{{item.PhraseTranslated}}</p>
                </div>
                <hr style="width: 793px;margin-left: 0px; margin-bottom: 0px;">
            </li>
        </ul>
    </div>
</div>
   
<script>
    $('.type').click(function () {
        $(".input-type").focus()
    });
</script>
