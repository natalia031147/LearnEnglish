
@{
    ViewBag.Title = "Recommendations";
}


<div div="page-content" style="width: 880px;" ng-init="getRecommendations()">
    <div class="video_title">
        <h3 style="color : #fff;">
            ASSIGNMENTS PLAN TODAY
        </h3>
    </div>
    <div class='md-padding' layout="row" layout-wrap>
        <md-card flex-xs="" flex-gt-xs="30" md-theme="dark-grey" md-theme-watch="">
            <md-card-header>
                <md-card-header-text>
                    <span class="md-title">Listening Lesson</span>
                    @*<span class="md-subhead">subhead</span>*@
                </md-card-header-text>
            </md-card-header>
            <img ng-src="{{recommendations.ListeningRecommendation.Thumbnail}}" class="md-card-image" alt="Washed Out">
            <md-card-title>
                <md-card-title-text>
                    <span class="md-headline">{{recommendations.ListeningRecommendation.Title}}</span>
                    <span class="md-subhead">Reversed</span>
                </md-card-title-text>
            </md-card-title>
            <md-card-actions layout="row" layout-align="start center">
                <md-button>Action 1</md-button>
                <md-button>Action 2</md-button>
                <md-card-icon-actions>
                    <md-button class="md-icon-button" aria-label="toggle">
                        <md-icon md-svg-icon="md-toggle-arrow"></md-icon>
                    </md-button>
                </md-card-icon-actions>
            </md-card-actions>
        </md-card>

        <md-card flex-xs="" flex-gt-xs="30" md-theme="dark-orange">
            <md-card-header>
                <md-card-header-text>
                    <span class="md-title">Writing Lesson</span>
                    @*<span class="md-subhead">subhead</span>*@
                </md-card-header-text>
            </md-card-header>
            <img ng-src="{{recommendations.WritingRecommendation.Thumbnail}}" class="md-card-image" alt="Washed Out">
            <md-card-title>
                <md-card-title-text>
                    <span class="md-headline">{{recommendations.WritingRecommendation.Title}}</span>
                    <span class="md-subhead">Reversed</span>
                </md-card-title-text>
            </md-card-title>
            <md-card-actions layout="row" layout-align="start center">
                <md-button>Action 1</md-button>
                <md-button>Action 2</md-button>
                <md-card-icon-actions>
                    <md-button class="md-icon-button" aria-label="toggle">
                        <md-icon md-svg-icon="md-toggle-arrow"></md-icon>
                    </md-button>
                </md-card-icon-actions>
            </md-card-actions>
        </md-card>

        <md-card flex-xs="" flex-gt-xs="30" md-theme="dark-purple">
            <md-card-header>
                <md-card-header-text>
                    <span class="md-title">Speaking Lesson</span>
                    @*<span class="md-subhead">subhead</span>*@
                </md-card-header-text>
            </md-card-header>
            <img ng-src="{{recommendations.WritingRecommendation.Thumbnail}}" class="md-card-image" alt="Washed Out">
            <md-card-title>
                <md-card-title-text>
                    <span class="md-headline">{{recommendations.WritingRecommendation.Title}}</span>
                    <span class="md-subhead">Reversed</span>
                </md-card-title-text>
            </md-card-title>
            <md-card-actions layout="row" layout-align="start center">
                <md-button>Action 1</md-button>
                <md-button>Action 2</md-button>
                <md-card-icon-actions>
                    <md-button class="md-icon-button" aria-label="toggle">
                        <md-icon md-svg-icon="md-toggle-arrow"></md-icon>
                    </md-button>
                </md-card-icon-actions>
            </md-card-actions>
        </md-card>
    </div>        
</div>
