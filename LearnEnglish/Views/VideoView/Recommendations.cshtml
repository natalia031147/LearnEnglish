
@{
    ViewBag.Title = "Recommendations";
}


<div div="page-content" style="width: 880px;" ng-init="getRecommendations()">
    <div class="video_title">
        <h3 style="color : #fff;">
            ASSIGNMENTS PLAN TODAY
        </h3>
    </div>
    <div class='md-padding' layout="row" layout-wrap>
        <md-card flex-xs="" flex-gt-xs="30"  md-theme-watch="" >
            <md-card-header>
                <md-card-header-text>
                    <span class="md-title">Listening Lesson</span>
                    @*<span class="md-subhead">subhead</span>*@
                </md-card-header-text>
            </md-card-header>
            <img ng-src="{{recommendations.listeningRecommendation.thumbnail}}" class="md-card-image" alt="Washed Out">
            <level level="2" style="margin-top: 5px; margin-left: 15px;"></level>
            <md-card-title>
                <md-card-title-text>
                    <a ng-href="/#/videos/{{recommendations.listeningRecommendation.id}}">
                        <span class="md-headline">{{recommendations.listeningRecommendation.title}}</span>
                    </a>
                </md-card-title-text>
            </md-card-title>
            <md-card-actions layout="row" layout-align="start center">

                <md-button ng-href="/#/listening/{{recommendations.listeningRecommendation.id}}" class="recommendations-button">
                    Listening
                </md-button>
            </md-card-actions>
    </md-card>
        
        


        <md-card flex-xs="" flex-gt-xs="30">
            <md-card-header>
                <md-card-header-text>
                    <span class="md-title">Writing Lesson</span>
                    @*<span class="md-subhead">subhead</span>*@
                </md-card-header-text>
            </md-card-header>
            <img ng-src="{{recommendations.writingRecommendation.thumbnail}}" class="md-card-image" alt="Washed Out">
            <level level="2" style="margin-top: 5px; margin-left: 15px;"></level>
            <md-card-title>
                <a ng-href="/#/videos/{{recommendations.writingRecommendation.id}}">
                    <span class="md-headline">{{recommendations.writingRecommendation.title}}</span>
                </a>
                </md-card-title-text>
            </md-card-title>
            <md-card-actions layout="row" layout-align="start center">
                <md-button ng-href="/#/writing/{{recommendations.writingRecommendation.id}}" class="recommendations-button">Writing</md-button>
            </md-card-actions>
        </md-card>
        

        
        <md-card flex-xs="" flex-gt-xs="30">
            <md-card-header>
                <md-card-header-text>
                    <span class="md-title">Writing Lesson</span>
                    @*<span class="md-subhead">subhead</span>*@
                </md-card-header-text>
            </md-card-header>
            <img ng-src="{{recommendations.writingRecommendation.thumbnail}}" class="md-card-image" alt="Washed Out">
            <level level="2" style="margin-top: 5px; margin-left: 15px;"></level>
            <md-card-title>
                <a ng-href="/#/videos/{{recommendations.writingRecommendation.id}}">
                    <span class="md-headline">{{recommendations.writingRecommendation.title}}</span>
                </a>
                </md-card-title-text>
            </md-card-title>
            <md-card-actions layout="row" layout-align="start center">
                <md-button ng-href="/#/writing/{{recommendations.writingRecommendation.id}}" class="recommendations-button">Writing</md-button>
            </md-card-actions>
        </md-card>
    </div>
    

    <div class="my-stats-bl  ">

        <h4 class="mb-20 link-tt">
            <a href="#" style="text-decoration: none; cursor: default;" class="toggle-langs expand-header">
                МОЙ РЕЙТИНГ В АНГЛИЙСКОМ
            </a>
        </h4>


        <ul class="statistic">
            <li class="rating">
                <span class="float-right"></span>
                <span class="float-left">Advanced</span>
                <div class="clear"></div>
                <div class="rating-block-bg">
                    <div data-animated-bar="0" class="rating-block" style="width: 0%"></div>
                    <span class="stat" style="z-index: 30;"></span>
                </div>
            </li>



        </ul>

        <!-- each activity bars progress -->
        <div class="clear"></div>
        <ul class="statistic rating-ico">
            <li class="item-1">
                <div class="rating-block-bg">
                    <div class="rating-block animated" style="width: 75%;" data-animated-bar="75" data-bar="listening"></div>
                </div>
                <strong>2300</strong>
            </li>
            <li class="item-2">
                <div class="rating-block-bg">
                    <div class="rating-block animated" style="width: 75%;" data-animated-bar="75" data-bar="grammar"></div>
                </div>
                <strong>2300</strong>
            </li>
            <li class="item-3">
                <div class="rating-block-bg">
                    <div class="rating-block animated" style="width: 75%;" data-animated-bar="75" data-bar="speaking"></div>
                </div>
                <strong>2300</strong>
            </li>
            <li class="item-4">
                <div class="rating-block-bg">
                    <div class="rating-block animated" style="width: 75%;" data-animated-bar="75" data-bar="writing"></div>
                </div>
                <strong>2300</strong>
            </li>
        </ul>
        <div class="clear"></div>
        <br>
    </div>
</div>
